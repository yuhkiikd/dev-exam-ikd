<h1>物件一覧</h1>
<table class="rent_index_table">
  <tr>
    <th>物件名</th>
    <th>賃料</th>
    <th>住所</th>
    <th>築年数</th>
    <th>備考</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
  <% @properties.each do |property| %>
    <tr>
      <td><%= property.property %></td>
      <td><%= property.rent %></td>
      <td><%= property.address %></td>
      <td><%= property.age %></td>
      <td><%= property.note %></td>
      <td><%= link_to '詳細', property %></td>
      <td><%= link_to '編集', edit_property_path(property) %></td>
      <td><%= link_to '削除', property, method: :delete, data: { confirm: '本当に削除してもよろしいですか？' } %></td>
    </tr>
  <% end %>
</table>

<%= link_to '物件を登録する', new_property_path %>